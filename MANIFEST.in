# Include important documentation
include README.md
include PACKAGE_README.md
include INSTALLATION_GUIDE.md
include LICENSE
include pyproject.toml

# Include examples
recursive-include examples *.py *.md

# Include model configs if any
recursive-include src/chatterbox *.json

# Exclude development and build files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
exclude .gitignore
exclude .gitattributes

# Exclude build artifacts
prune dist
prune build
prune .venv
prune *.egg-info
